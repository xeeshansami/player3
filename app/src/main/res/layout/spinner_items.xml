<?xml version="1.0" encoding="utf-8"?><!--<TextView--><!--xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:layout_width="match_parent"--><!--android:layout_height="wrap_content"--><!--android:textColor="#FFF"--><!--android:padding="10dp"--><!--/>-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
     android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/ic_music_note_black_24dp"
        android:tint="@color/Lightblack" />

    <TextView
        android:id="@+id/weekofday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Music"
        android:textColor="#000" />
</LinearLayout>