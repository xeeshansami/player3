<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/leftRightTvOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/dot"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/leftRightTvTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/leftRightTvOne"
        android:text="@string/dot"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/leftRightTvThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/leftRightTvTwo"
        android:text="@string/dot"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/dummyLeftRightOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/dot"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/dummyLeftRightTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/leftRightTvOne"
        android:text="@string/dot"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/dummyLeftRightThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/leftRightTvTwo"
        android:text="@string/dot"
        android:textSize="40sp"
        android:visibility="gone" />

</merge>