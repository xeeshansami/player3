<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="250sp"
        android:background="@drawable/bgt"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/heading"
            android:text="Sleeper Timer"
            android:textColor="#fff"
            android:layout_marginTop="30sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="20sp"
            android:layout_below="@+id/heading"
            android:orientation="vertical"
            android:padding="10sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="10sp"
                android:text="Off"
                android:id="@+id/sleeperoff"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="10sp"
                android:text="15 minutes"
                android:id="@+id/sleeper1"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="30 minutes"
                android:id="@+id/sleeper2"
                android:padding="10sp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="45 minutes"
                android:padding="10sp"
                android:id="@+id/sleeper3"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="60 minutes"
                android:padding="10sp"
                android:id="@+id/sleeper4"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>