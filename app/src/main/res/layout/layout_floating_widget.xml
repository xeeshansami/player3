<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   >

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/collapse_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextureView
            android:id="@+id/collapsed_iv"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="0dp"
            ></TextureView>
        <TextView
            android:id="@+id/title"
            android:layout_width="290dp"
            android:background="@drawable/bgt"
            android:layout_height="30dp"
            android:ellipsize="marquee"
            android:visibility="gone"
            android:focusable="true"
            android:layout_marginTop="8dp"
            android:focusableInTouchMode="true"
            android:fontFamily="sans-serif-thin"
            android:gravity="left"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="2"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="0dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Hi make this a very long string that wraps at least 4 lines, seriously make it really really long so it gets cut off at the fourth line not joke.  Just do it!"
            android:textColor="#FFF"
            android:textSize="17sp"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|center"
            android:background="@drawable/bgt"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/resize"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:src="@drawable/ic_zoom_out_map_black_24dp"
                android:tint="#4267B2"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/playpausebtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:tint="#4267B2"
                android:src="@drawable/ic_play_arrow_white_24dp"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:src="@drawable/ic_close_black_24dp"
                android:tint="#4267B2"
                tools:ignore="ContentDescription" />


        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
